            <tgroup cols="2">
              <thead>
                <row>
                  <entry>Indicator</entry>
                  <entry>Meaning</entry>
                </row>
              </thead>
              <tbody>
                <row>
                  <entry>
                    <mediaobject>
                      <imageobject role="html">
                        <imagedata align="center" scale="100" fileref="images/site-config.png" format="PNG"/>
                      </imageobject>
                    </mediaobject>
                  </entry>
                  <entry><emphasis role="bold">Site&apos;s config</emphasis>: allows editing the site&apos;s configuration.</entry>
